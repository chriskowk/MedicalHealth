<?xml version="1.0" encoding="utf - 8" ?>
<quartz xmlns="http://quartznet.sourceforge.net/JobSchedulingData"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    version="1.0"
    overwrite-existing-jobs="true">
    <job>
      <job-detail>
          <name>MyJobB</name>
          <group>MyJobB</group>
          <job-type>MyJob.TaskJobB, MyJob</job-type>
      </job-detail>
      <trigger>
          <cron>
            <name>cronMyJobB</name>
            <group>cronMyJobB</group>
            <job-name>MyJobB</job-name>
            <job-group>MyJobB</job-group>
            <!--秒 分 小时 月内日期 月 周内日期 年（可选字段）-->
            <!--周一到周五每天的8点到20点，每一分钟触发一次-->
            <!--<cron-expression>0 0/1 8-20 ? * MON-FRI</cron-expression>-->
            <!--每天21点触发-->
            <!--<cron-expression>0 0 21 ? * *</cron-expression>-->
            <cron-expression>0 30 20 ? * *</cron-expression>
          </cron>
      </trigger>
    </job>
</quartz>
