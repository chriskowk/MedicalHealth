<DataGrid
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:js="http://schemas.jetsun.com.cn/his/2009/presentation">
    <DataGrid.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="FontWeight" Value="Normal"/>
            <Setter Property="FontStyle" Value="Normal"/>
        </Style>
    </DataGrid.Resources>
    <DataGrid.RowStyle>
        <Style TargetType="{x:Type DataGridRow}"
                   js:MarkupHelper.BaseOnKey="{x:Type DataGridRow}">
            <Style.Triggers>
                <DataTrigger Binding="{Binding Path=IsDeleted}" Value="true">
                    <Setter Property="Background" Value="{x:Static js:Markup.DeletedEntityBackground}" />
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </DataGrid.RowStyle>
    <js:GridDecorator.SortMembers>
        <js:SortMember Member="Year" Direction="Ascending"></js:SortMember>
        <js:SortMember Member="CreateDate" Direction="Ascending"></js:SortMember>
    </js:GridDecorator.SortMembers>

    <!--表格列设置-->
    <DataGrid.Columns>
        <DataGridTextColumn Header="创建者" Binding="{Binding Employee.Name}"></DataGridTextColumn>
        <DataGridTextColumn Header="片区" Binding="{Binding AreaOrganization.Name}"></DataGridTextColumn>
        <DataGridTextColumn Header="科室" Binding="{Binding OwnerOrganization.Name}"></DataGridTextColumn>
        <DataGridTextColumn Header="年度" Binding="{Binding Year}"></DataGridTextColumn>
        <!--<DataGridTextColumn Header="创建时间" Binding="{Binding CreateDate, StringFormat='yyyy-MM-dd HH:mm' }"></DataGridTextColumn>-->
        <DataGridTemplateColumn Header="创建时间" js:GridDecorator.Binding="{Binding CreateDate, StringFormat='yyyy-MM-dd' }"  js:GridDecorator.EditorKind="DatePicker"></DataGridTemplateColumn>
        <DataGridTextColumn Header="状态" Binding="{Binding Status}"></DataGridTextColumn>
        <DataGridTextColumn Header="最后修改人" Binding="{Binding ModifyOn.Name}"></DataGridTextColumn>
    </DataGrid.Columns>
</DataGrid>
